{
  "compilerOptions": {
    "target": "esnext",                                 
    "module": "esnext",                                
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "node"]                               
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "types"
  ],
  "exclude": ["node_modules", "dist"]
}
